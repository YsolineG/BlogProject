{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-text">
                        <span class="name">Mon profil</span>
                        <hr class="star-light">
                    </div>
                </div>
            </div>
        </div>
    </header>
    <section>
        <div class="container">
            <div class="row">
                <div class="text-center">
                    <h2>{{ session.get('pseudo') }}</h2><br>
                    <p class="text-success">{{ session.show('successMessage') }}</p>
                    <p><a href="../public/index.php?route=updatePassword" class="btn btn-success">Modifier son mot de passe</a></p>
                    <a href="../public/index.php?route=deleteAccount" class="btn btn-success">Supprimer mon profil</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
