{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-text">
                        <span class="name">Articles</span>
                        <hr class="star-light">
                    </div>
                </div>
            </div>
        </div>
    </header>
    <section>
{% for blog in blogPosts %}
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>
                    <a href="../public/index.php?route=blogPost&idBlogPost={{ blog.id }}">
                        {{ blog.title }}
                    </a>
                </h2>
                <br>
                <h4>{{ blog.chapeau }}</h4>
                <br>
                <p>Modifi√© le {{ blog.updatedAt }}</p>
                <hr/>
            </div>
        </div>
{% endfor %}

    </section>
{% endblock %}